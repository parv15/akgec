Question 1
// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;

int main() {
    int n = 5;
    int i = 0 ;
    int j = 0 ;
    int k = 0;
    for (i = 1; i <= n; i++) {
        for (j = i; j < n; j++) cout << " ";
        for (k = 1; k <= (2 * i - 1); k++) cout << "*";
        cout << endl;
    }
    for (i = n - 1; i >= 1; i--) {
        for (j = n; j > i; j--) cout << " ";
        for (k = 1; k <= (2 * i - 1); k++) cout << "*";
        cout << endl;
    }
    return 0;
}
